{
  "annotations": {
    "list": []
  },
  "description": "Load test metrics from Locust and cluster resource usage overview",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "links": [],
  "panels": [
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "id": 100,
      "title": "Load Generator",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "color": { "fixedColor": "blue", "mode": "fixed" },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 20,
            "lineWidth": 2,
            "stacking": { "mode": "none" }
          },
          "unit": "short"
        }
      },
      "gridPos": { "h": 6, "w": 8, "x": 0, "y": 1 },
      "id": 1,
      "options": { "legend": { "displayMode": "list", "placement": "bottom" } },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "locust_users{namespace=\"$namespace\"}",
          "legendFormat": "concurrent users"
        }
      ],
      "title": "Concurrent Users",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 10,
            "lineWidth": 2,
            "stacking": { "mode": "none" }
          },
          "unit": "reqps"
        }
      },
      "gridPos": { "h": 6, "w": 8, "x": 8, "y": 1 },
      "id": 2,
      "options": { "legend": { "displayMode": "list", "placement": "bottom" } },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "locust_requests_current_rps{namespace=\"$namespace\"}",
          "legendFormat": "RPS"
        },
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "locust_requests_current_fail_per_sec{namespace=\"$namespace\"}",
          "legendFormat": "failures/sec"
        }
      ],
      "title": "Requests per Second",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 10,
            "lineWidth": 2,
            "stacking": { "mode": "none" }
          },
          "unit": "ms"
        }
      },
      "gridPos": { "h": 6, "w": 8, "x": 16, "y": 1 },
      "id": 3,
      "options": { "legend": { "displayMode": "list", "placement": "bottom" } },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "locust_requests_avg_response_time{namespace=\"$namespace\"}",
          "legendFormat": "avg"
        },
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "locust_requests_current_response_time_percentile_50{namespace=\"$namespace\"}",
          "legendFormat": "p50"
        },
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "locust_requests_current_response_time_percentile_95{namespace=\"$namespace\"}",
          "legendFormat": "p95"
        }
      ],
      "title": "Response Time",
      "type": "timeseries"
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 7 },
      "id": 101,
      "title": "Cluster Resources",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 20,
            "lineWidth": 2,
            "stacking": { "mode": "none" }
          },
          "unit": "percentunit",
          "max": 1
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "id": 4,
      "options": { "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"] } },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "1 - avg by (node) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m]))",
          "legendFormat": "{{node}}"
        }
      ],
      "title": "Node CPU Usage",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 20,
            "lineWidth": 2,
            "stacking": { "mode": "none" }
          },
          "unit": "bytes"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "id": 5,
      "options": { "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"] } },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes",
          "legendFormat": "used - {{instance}}"
        }
      ],
      "title": "Node Memory Usage",
      "type": "timeseries"
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 16 },
      "id": 102,
      "title": "Pod Resources (Workload Namespace)",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 10,
            "lineWidth": 1,
            "stacking": { "mode": "none" }
          },
          "unit": "short"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 17 },
      "id": 6,
      "options": { "legend": { "displayMode": "table", "placement": "right", "calcs": ["mean", "max"] } },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "rate(container_cpu_usage_seconds_total{namespace=\"$namespace\", container!=\"\", container!=\"POD\"}[5m])",
          "legendFormat": "{{pod}} / {{container}}"
        }
      ],
      "title": "Pod CPU Usage (cores)",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 10,
            "lineWidth": 1,
            "stacking": { "mode": "none" }
          },
          "unit": "bytes"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 17 },
      "id": 7,
      "options": { "legend": { "displayMode": "table", "placement": "right", "calcs": ["mean", "max"] } },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "container_memory_working_set_bytes{namespace=\"$namespace\", container!=\"\", container!=\"POD\"}",
          "legendFormat": "{{pod}} / {{container}}"
        }
      ],
      "title": "Pod Memory Usage",
      "type": "timeseries"
    }
  ],
  "schemaVersion": 39,
  "tags": ["load-test", "benchmarking"],
  "templating": {
    "list": [
      {
        "current": {},
        "hide": 0,
        "includeAll": false,
        "name": "datasource",
        "options": [],
        "query": "prometheus",
        "refresh": 1,
        "type": "datasource"
      },
      {
        "current": { "text": "microservices-demo", "value": "microservices-demo" },
        "hide": 0,
        "includeAll": false,
        "name": "namespace",
        "options": [
          { "selected": true, "text": "microservices-demo", "value": "microservices-demo" }
        ],
        "query": "microservices-demo",
        "type": "textbox"
      }
    ]
  },
  "time": { "from": "now-1h", "to": "now" },
  "title": "Load Test Overview",
  "uid": "load-test-overview"
}
