{
  "annotations": {
    "list": []
  },
  "description": "HPA autoscaling behaviour analysis for the adservice workload under load",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "links": [],
  "panels": [
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "id": 100,
      "title": "HPA Status",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 15,
            "lineWidth": 2,
            "pointSize": 5,
            "showPoints": "auto",
            "stacking": { "mode": "none" },
            "axisPlacement": "auto",
            "spanNulls": false
          },
          "unit": "short",
          "decimals": 0
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "desired" },
            "properties": [
              { "id": "color", "value": { "fixedColor": "orange", "mode": "fixed" } },
              { "id": "custom.lineStyle", "value": { "fill": "dash", "dash": [10, 10] } }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "current" },
            "properties": [
              { "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }
            ]
          }
        ]
      },
      "gridPos": { "h": 8, "w": 16, "x": 0, "y": 1 },
      "id": 1,
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom", "calcs": ["lastNotNull", "min", "max"] },
        "tooltip": { "mode": "multi", "sort": "none" }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "kube_horizontalpodautoscaler_status_current_replicas{namespace=\"$namespace\", horizontalpodautoscaler=\"$hpa\"}",
          "legendFormat": "current"
        },
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "kube_horizontalpodautoscaler_status_desired_replicas{namespace=\"$namespace\", horizontalpodautoscaler=\"$hpa\"}",
          "legendFormat": "desired"
        }
      ],
      "title": "HPA Replicas",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "color": { "fixedColor": "blue", "mode": "fixed" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "blue", "value": null }
            ]
          },
          "unit": "short",
          "decimals": 0
        }
      },
      "gridPos": { "h": 4, "w": 4, "x": 16, "y": 1 },
      "id": 2,
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto",
        "textMode": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "kube_horizontalpodautoscaler_spec_min_replicas{namespace=\"$namespace\", horizontalpodautoscaler=\"$hpa\"}",
          "legendFormat": "minReplicas"
        }
      ],
      "title": "HPA Min Replicas",
      "type": "stat"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "color": { "fixedColor": "purple", "mode": "fixed" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "purple", "value": null }
            ]
          },
          "unit": "short",
          "decimals": 0
        }
      },
      "gridPos": { "h": 4, "w": 4, "x": 20, "y": 1 },
      "id": 3,
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto",
        "textMode": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "kube_horizontalpodautoscaler_spec_max_replicas{namespace=\"$namespace\", horizontalpodautoscaler=\"$hpa\"}",
          "legendFormat": "maxReplicas"
        }
      ],
      "title": "HPA Max Replicas",
      "type": "stat"
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 9 },
      "id": 101,
      "title": "CPU Metrics",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 10,
            "lineWidth": 2,
            "pointSize": 5,
            "showPoints": "never",
            "stacking": { "mode": "none" },
            "axisPlacement": "auto",
            "spanNulls": false,
            "thresholdsStyle": { "mode": "line" }
          },
          "unit": "percent",
          "min": 0,
          "max": 200,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 80 }
            ]
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "target (80%)" },
            "properties": [
              { "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } },
              { "id": "custom.lineStyle", "value": { "fill": "dash", "dash": [10, 10] } },
              { "id": "custom.fillOpacity", "value": 0 },
              { "id": "custom.lineWidth", "value": 1 }
            ]
          }
        ]
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 10 },
      "id": 4,
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom", "calcs": ["mean", "lastNotNull", "max"] },
        "tooltip": { "mode": "multi", "sort": "none" }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "100 * avg(rate(container_cpu_usage_seconds_total{namespace=\"$namespace\", pod=~\"$hpa.*\", container!=\"\", container!=\"POD\"}[5m])) / avg(kube_pod_container_resource_requests{namespace=\"$namespace\", pod=~\"$hpa.*\", resource=\"cpu\", container!=\"\", container!=\"POD\"})",
          "legendFormat": "actual utilization"
        },
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "vector(80)",
          "legendFormat": "target (80%)"
        }
      ],
      "title": "CPU Utilization vs Target",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 15,
            "lineWidth": 1,
            "pointSize": 5,
            "showPoints": "never",
            "stacking": { "mode": "none" },
            "axisPlacement": "auto",
            "spanNulls": false
          },
          "unit": "short"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 10 },
      "id": 5,
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"] },
        "tooltip": { "mode": "multi", "sort": "desc" }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "rate(container_cpu_usage_seconds_total{namespace=\"$namespace\", pod=~\"$hpa.*\", container!=\"\", container!=\"POD\"}[5m])",
          "legendFormat": "{{pod}} / {{container}}"
        }
      ],
      "title": "CPU Usage per Pod",
      "type": "timeseries"
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 18 },
      "id": 102,
      "title": "Stability",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 20,
            "lineWidth": 1,
            "pointSize": 5,
            "showPoints": "never",
            "stacking": { "mode": "none" },
            "axisPlacement": "auto",
            "spanNulls": false
          },
          "unit": "short"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 19 },
      "id": 6,
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"] },
        "tooltip": { "mode": "multi", "sort": "desc" }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "rate(container_cpu_cfs_throttled_periods_total{namespace=\"$namespace\", pod=~\"$hpa.*\", container!=\"\", container!=\"POD\"}[5m])",
          "legendFormat": "{{pod}} / {{container}}"
        }
      ],
      "title": "CPU Throttling",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 10,
            "lineWidth": 2,
            "pointSize": 5,
            "showPoints": "never",
            "stacking": { "mode": "none" },
            "axisPlacement": "auto",
            "spanNulls": false
          },
          "unit": "short",
          "decimals": 0
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 19 },
      "id": 7,
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["lastNotNull", "max"] },
        "tooltip": { "mode": "multi", "sort": "desc" }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "kube_pod_container_status_restarts_total{namespace=\"$namespace\", pod=~\"$hpa.*\"}",
          "legendFormat": "{{pod}} / {{container}}"
        }
      ],
      "title": "Pod Restart Count",
      "type": "timeseries"
    }
  ],
  "schemaVersion": 39,
  "tags": ["hpa", "benchmarking", "study"],
  "templating": {
    "list": [
      {
        "current": { "selected": false, "text": "Prometheus", "value": "prometheus" },
        "hide": 0,
        "includeAll": false,
        "label": "Data Source",
        "multi": false,
        "name": "datasource",
        "options": [],
        "query": "prometheus",
        "queryValue": "",
        "refresh": 1,
        "regex": "",
        "skipUrlSync": false,
        "type": "datasource"
      },
      {
        "current": { "selected": false, "text": "microservices-demo", "value": "microservices-demo" },
        "datasource": { "type": "prometheus", "uid": "${datasource}" },
        "definition": "label_values(kube_horizontalpodautoscaler_info, namespace)",
        "hide": 0,
        "includeAll": false,
        "label": "Namespace",
        "multi": false,
        "name": "namespace",
        "options": [],
        "query": { "qryType": 1, "query": "label_values(kube_horizontalpodautoscaler_info, namespace)", "refId": "PrometheusVariableQueryEditor-VariableQuery" },
        "refresh": 1,
        "regex": "",
        "skipUrlSync": false,
        "sort": 1,
        "type": "query"
      },
      {
        "current": { "selected": false, "text": "adservice", "value": "adservice" },
        "datasource": { "type": "prometheus", "uid": "${datasource}" },
        "definition": "label_values(kube_horizontalpodautoscaler_info{namespace=\"$namespace\"}, horizontalpodautoscaler)",
        "hide": 0,
        "includeAll": false,
        "label": "HPA",
        "multi": false,
        "name": "hpa",
        "options": [],
        "query": { "qryType": 1, "query": "label_values(kube_horizontalpodautoscaler_info{namespace=\"$namespace\"}, horizontalpodautoscaler)", "refId": "PrometheusVariableQueryEditor-VariableQuery" },
        "refresh": 1,
        "regex": "",
        "skipUrlSync": false,
        "sort": 1,
        "type": "query"
      }
    ]
  },
  "time": { "from": "now-1h", "to": "now" },
  "timepicker": {},
  "timezone": "browser",
  "title": "HPA Autoscaling Study",
  "uid": "hpa-autoscaling-study",
  "version": 1
}
